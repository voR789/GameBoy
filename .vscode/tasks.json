{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Emulator",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "-fsanitize=address",
        "-O1",
        "src/cpu.cpp",
        "src/emulator.cpp",
        "src/mmu.cpp",
        "src/ppu.cpp",
        "src/timer.cpp",
        "src/renderer.cpp",
        "src/serial.cpp",
        "src/dma.cpp",
        "-o",
        "bin/emulator"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Emulator",
      "type": "shell",
      "command": "./bin/emulator",
      "dependsOn": "Build Emulator",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
