{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Emulator",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p bin && /usr/bin/g++ -std=c++17 -g -Wall -Wextra -Isrc src/emulator.cpp src/cpu.cpp src/mmu.cpp src/ppu.cpp src/timer.cpp src/serial.cpp -o bin/GameBoy"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Builds all source files in src/ to create the emulator executable"
    },
    {
      "label": "Run Emulator",
      "type": "shell",
      "command": "${workspaceFolder}/bin/GameBoy",
      "args": [],
      "dependsOn": "Build Emulator",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Builds and runs the emulator"
    }
  ]
}

